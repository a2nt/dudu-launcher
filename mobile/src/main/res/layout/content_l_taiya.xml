<?xml version="1.0" encoding="utf-8"?>
<com.wow.carlauncher.common.theme.TRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_item_taiya_bg"
    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry">

    <com.wow.carlauncher.common.theme.TFrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="12%h">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lines="1"
            android:text="胎压"
            android:textColor="@color/theme_item_title"
            app:layout_marginLeftPercent="25%h"
            app:layout_marginRightPercent="25%h"
            app:layout_textSizePercent="50%h" />
    </com.wow.carlauncher.common.theme.TFrameLayout>

    <com.wow.carlauncher.common.theme.TRelativeLayout
        android:id="@+id/ll_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_marginLeftPercent="2%h"
        app:layout_marginRightPercent="2%h">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/theme_obd_not_connect"
            app:layout_heightPercent="45%w"
            app:layout_widthPercent="45%w" />

        <com.wow.carlauncher.common.theme.TFrameLayout
            android:id="@+id/fl_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            app:layout_heightPercent="12%h"
            app:layout_marginBottomPercent="5%h">

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lines="1"
                android:text="@string/obd_not_connect"
                android:textColor="@color/theme_taiya_msg"
                app:layout_textSizePercent="50%h" />
        </com.wow.carlauncher.common.theme.TFrameLayout>
    </com.wow.carlauncher.common.theme.TRelativeLayout>

    <com.wow.carlauncher.common.theme.TRelativeLayout
        android:id="@+id/ll_ty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_marginBottomPercent="2%h"
        app:layout_marginLeftPercent="2%h"
        app:layout_marginRightPercent="2%h">

        <com.wow.carlauncher.common.theme.TRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_marginTopPercent="12%h">


            <com.wow.carlauncher.common.theme.TFrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:background="@drawable/theme_taiya_cell_bg">

                <TextView
                    android:id="@+id/tv_lt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:padding="12dp"
                    android:text="左前\n0.0\n0.0"
                    android:textColor="@color/theme_taiya_info"
                    app:layout_textSizePercent="7%h" />
            </com.wow.carlauncher.common.theme.TFrameLayout>

            <com.wow.carlauncher.common.theme.TFrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/theme_taiya_cell_bg">

                <TextView
                    android:id="@+id/tv_rt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:padding="12dp"
                    android:text="右前\n0.0\n0.0"
                    android:textColor="@color/theme_taiya_info"
                    app:layout_textSizePercent="7%h" />
            </com.wow.carlauncher.common.theme.TFrameLayout>


            <com.wow.carlauncher.common.theme.TFrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:background="@drawable/theme_taiya_cell_bg">

                <TextView
                    android:id="@+id/tv_lb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:padding="12dp"
                    android:text="左后\n0.0\n0.0"
                    android:textColor="@color/theme_taiya_info"
                    app:layout_textSizePercent="7%h" />
            </com.wow.carlauncher.common.theme.TFrameLayout>

            <com.wow.carlauncher.common.theme.TFrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:background="@drawable/theme_taiya_cell_bg">

                <TextView
                    android:id="@+id/tv_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:padding="12dp"
                    android:text="右后\n0.0\n0.0"
                    android:textColor="@color/theme_taiya_info"
                    app:layout_textSizePercent="7%h" />
            </com.wow.carlauncher.common.theme.TFrameLayout>

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/theme_taiya_car"
                app:layout_heightPercent="40%h"
                app:layout_widthPercent="40%w" />
        </com.wow.carlauncher.common.theme.TRelativeLayout>
    </com.wow.carlauncher.common.theme.TRelativeLayout>
</com.wow.carlauncher.common.theme.TRelativeLayout>
